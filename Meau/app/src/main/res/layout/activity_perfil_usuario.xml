<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PerfilUsuario">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarprofile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/perfil_usuario_txt_title_nomecompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/roboto"
                android:text="@string/nome_completo"
                android:textColor="@color/colorTitleTelaUsuario"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/perfil_usuario_txt_nomecompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorTextFont" />

            <TextView
                android:id="@+id/perfil_usuario_txt_title_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/roboto"
                android:text="@string/idade"
                android:textColor="@color/colorTitleTelaUsuario"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/perfil_usuario_txt_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text=""
                android:textColor="@color/colorTextFont" />

            <TextView
                android:id="@+id/perfil_usuario_txt_title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/roboto"
                android:text="@string/email"
                android:textColor="@color/colorTitleTelaUsuario"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/perfil_usuario_txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text=""
                android:textColor="@color/colorTextFont" />

            <TextView
                android:id="@+id/perfil_usuario_txt_title_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/roboto"
                android:text="@string/local"
                android:textColor="@color/colorTitleTelaUsuario"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/perfil_usuario_txt_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text=""
                android:textColor="@color/colorTextFont" />

            <TextView
                android:id="@+id/perfil_usuario_txt_title_endereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/roboto"
                android:text="@string/endereco"
                android:textColor="@color/colorTitleTelaUsuario"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/perfil_usuario_txt_endereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text=""
                android:textColor="@color/colorTextFont" />

            <TextView
                android:id="@+id/perfil_usuario_txt_title_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/roboto"
                android:text="@string/telefone"
                android:textColor="@color/colorTitleTelaUsuario"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/perfil_usuario_txt_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text=""
                android:textColor="@color/colorTextFont" />

            <TextView
                android:id="@+id/perfil_usuario_txt_title_historico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/roboto"
                android:text="@string/historico"
                android:textColor="@color/colorTitleTelaUsuario"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/perfil_usuario_txt_historico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text="0"
                android:textColor="@color/colorTextFont" />

            <Button
                android:id="@+id/button"
                android:layout_width="500dp"
                android:layout_height="705dp"
                android:layout_marginTop="-700dp"
                android:background="#00FFFFFF"
                android:onClick="cadastroScreen" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/perfil_usuario_btn_chat"
                    style="@style/AppThemeBlue.ButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="24dp"
                    android:layout_weight="1"
                    android:width="148dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/chat"
                    android:textColor="@color/colorGrayBtnText"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/perfil_usuario_btn_historias"
                    style="@style/AppThemeBlue.ButtonMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="24dp"
                    android:layout_weight="1"
                    android:width="148dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/historias"
                    android:textColor="@color/colorGrayBtnText"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

</android.support.constraint.ConstraintLayout>