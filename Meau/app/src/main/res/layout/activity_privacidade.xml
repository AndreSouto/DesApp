<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Privacidade">


    <include
        android:id="@+id/toolbarPrivacidade"
        layout="@layout/toolbar_privacidade"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTIFICAÇÕES"
            android:textColor="@color/fontColor3"
            android:layout_marginTop="12dp"
            android:textSize="7pt"
            />

        <CheckBox
            android:layout_marginTop="16dp"
            android:id="@+id/Notchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:buttonTint="@color/LightGray"
            android:textColor="@color/LightGray"
            android:text="Ativar notificações de chat" />

        <CheckBox
            android:layout_marginTop="24dp"
            android:id="@+id/Notrec"
            android:textSize="7pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/LightGray"
            android:textColor="@color/LightGray"
            android:text="Ativar notificações de recordação" />

        <CheckBox
            android:layout_marginTop="24dp"
            android:id="@+id/Noteventos"
            android:textSize="7pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/LightGray"
            android:textColor="@color/LightGray"
            android:text="Ativar notificações de eventos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Com as notificações de chat ativadas, você
sempre receberá um aviso em seu celular quando
alguém entrar em contato através do aplicativo."
            android:textColor="@color/fontColor3"
            android:textSize="7pt"
            android:layout_marginTop="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Com as notificações de recordação ativadas, você
será sempre lembrado de entrar em contato com
o doador (caso você adote um animal) a fim de
cumprir o requisito de acompanhamento pós
adoção"
            android:textColor="@color/fontColor3"
            android:textSize="7pt"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Com as notificações de eventos ativadas, você
sempre receberá uma notificação para lembrá-lo
dos eventos da semana."
            android:textColor="@color/fontColor3"
            android:textSize="7pt"
            android:layout_marginTop="16dp"
            />

        <Button
            android:layout_width="232dp"
            android:layout_height="40dp"
            android:textSize="5pt"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/fontColor5"
            android:background="@drawable/btnp_gray"
            android:text="SALVAR ALTERAÇÕES"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>